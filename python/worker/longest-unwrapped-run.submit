Universe = vanilla
Requirements = (TARGET.Arch == "X86_64") && (HAS_MODULES =?= True) && (OSGVO_OS_STRING == "RHEL 7")

executable = python-wrapper.sh
arguments = $(kPDE) $(LPDE) $(c0) $(T) $(iter_no) $(td) $(time_res)

transfer_input_files = return_longest_unwrapped_traj.py, worker_env.tar.gz

output = Log/job.out.$(Cluster).$(Process)
error = Log/job.error.$(Cluster).$(Process)
log = Log/job.log.$(Cluster).$(Process)

request_cpus = 1
request_memory = 10 MB
request_disk = 700 MB

PeriodicRelease = ( (CurrentTime - EnteredCurrentStatus) > $RANDOM_INTEGER(2200, 3200, 200) ) && ((NumJobStarts < 3))
queue kPDE LPDE c0 T iter_no td time_res from runs/run_1.dat
